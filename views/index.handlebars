<div class="container">

    <div class="jumbotron text-white text-center">
        <h1 class="display-3">Order Your Burger </h1>
        <br>
        <h2 class="h3">Select a Burger or Sandwich</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Order Fresh Burger</label>
                    {{!-- <input type="text" id="newburger" name="burger"> --}}
                    <select data-placeholder="" id="newburger" name="burger">
                        <option value="Nothing Selected" selected>Please Select a Burger</option>
                        <option value="CheeseBurger">CheeseBurger</option>
                        <option value="BaconBurger">Bacon Burger</option>
                        <option value="Spicy Chicken">Spicy Chicken</option>
                        <option value="YoloBurger">Yolo Burger</option>
                        <option value="TripleDeckerBurger">Triple Decker Burger</option>
                    </select>

                    <button type="submit" class="btn btn-success btn-sm" id="addburger">
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Burgers or Sandwich ready to be devour!</strong>

                </div>
                <hr>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-danger" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-cc-visa"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Burgers or Sandwiches that have been
                        devoured!</strong>

                </div>
                <hr>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="deleteburger btn btn-danger" id="deletebutton"
                            data-id="{{this.id}}" data-newDevoured="{{devour}}"><span
                                class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>